Function U_zTurnoInicial()
    Local n as numeric
    Local cRetSeq as character 
    Local aSeqTurno as array
    Local nQtdRegistrosTurno as numeric
    Local lSequencia as logical
    Local lMsg as logical

    lSequencia := .F.
    
    If M->RA_TNOTRAB == "   "
        FwAlertInfo("Numero de Requisição (Campo: Num. Req.) ou Turno de Trabalho não preenchidos. Para que a sequencia inicial do turno de trabalho do funcionario seja preenchida, um dos campos acima é necessário.","Informe o numero da requisição ou o Turno de Trabalho")
        M->RA_ADMISSA := STOD("")
        M->RA_OPCAO := STOD("")
        Return cRetSeq
    EndIf   

    aSeqTurno := array(0)

    //Monta uma tabela temporaria com a sequencia de turno
    BeginSQL Alias "ZSEQUENCIATURNO"
        SELECT PJ_TURNO,PJ_SEMANA,PJ_DIA,PJ_TPDIA
        FROM %table:SPJ% SPJ
        WHERE SPJ.%notdel%
        AND PJ_TURNO = %Exp:RA_TNOTRAB%
    EndSQL

    //Retorna a quantidade de registros e monta o array com todos os registros filtrados
    ZSEQUENCIATURNO->(dbEval({|| aadd(aSeqTurno,{PJ_SEMANA,PJ_DIA,PJ_TPDIA})})) 
    nQtdRegistrosTurno := Len(aSeqTurno)

    //Se a consulta retornar apenas 7 linhas, então existe apenas 1 sequencia de turno
    If Len(aSeqTurno) == 7
        cRetSeq := aSeqTurno[n][1]
    Else
        For n := 1 to nQtdRegistrosTurno
            If cValToChar(DoW(M->RA_ADMISSA)) == aSeqTurno[n][2] .AND. aSeqTurno[n][3] = "S" //Se a data de admissão em memória (convertida em dia da semana) for igual ao dia da semana da sequencia de turno posicionada e o dia também for trabalhado, retorna para o gatilho a sequencia a ser utilizada 
                lMsg := .T.
                cRetSeq := aSeqTurno[n][1] 
                Exit
            Else
                lMsg := .F.//Se não atender a condição acima retorna a mensagem de que a data não confere com a sequencia de turno
            EndIf
        Next
        If lMsg == .F.
            FwAlertInfo("A data informada não coinscidi com a sequencia de turno do funcionario pois não existe dia de inicio trabalhado para essa data", "Verifique a Data de Amissão/Ou o Turno selecionado.")
            Return cRetSeq
        EndIf
    EndIf
Return cRetSeq
